    <fileSets>
        <fileSet>
            <directory></directory>
            <includes>
                <include>gitignore.txt</include>
                <include>.editorconfig</include>
                <include>.editorconfig</include>
            </includes>
        </fileSet>
    </fileSets>

    <modules>
        <module id="${rootArtifactId}-api" dir="__rootArtifactId__-api" name="${rootArtifactId}-api">
